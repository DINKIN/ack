# $Revision$
var w=4
var p=4
var s=2
var l=4
var f=4
var d=8
var NAME=sparc
var M=sparc_solaris
var LIB=lib/{M}/tail_
var RT=lib/{M}/head_
var CPP_F=-D__unix -D__sparc -D__SYS_5 -D__USG -D__sun -D__solaris
var CC_ALIGN=-VS4 -S9
var C_LIB={EM}/{LIB}cc.1s {EM}/{LIB}cc.2g
var OLD_C_LIB={C_LIB}
var MACHOPT_F=-ml100
name be
	from .m.g
	to .s
	program {EM}/lib.bin/{M}/cg
	mapflag -gdb GF=-gdb
	args {GF?} <
	stdout
	need .e
end
name asopt
	from .s
	to .so
	program {EM}/lib.bin/sparc/top
	args
	optimizer
	stdin
	stdout
end
name as
	from .s.so
	to .o
	program /usr/ccs/bin/as
	args -s -o > <
	prep cond
end
name led
	from .o.a
	to .out
	program /usr/ccs/bin/ld
	mapflag -l* LNAME={EM}/{LIB}*
	mapflag -g LIBDB={EM}/{LIB}db
	mapflag -ansi C_LIB={EM}/{LIB}ac
	args \
		(.e:{HEAD}= {EM}/{RT}em) \
		({RTS}:.ocm.bas={EM}/{RT}cc) \
		({RTS}{ANSI?}:.c={EM}/{RT}cc) \
		({RTS}{ANSI?}:.cansi={EM}/{RT}ac) \
		({RTS}:.f={EM}/{RT}ac) \
		({RTS}:.mod={EM}/{RT}m2) \
		({RTS}:.cp.8={EM}/{RT}cpc) \
		({RTS}:.8={EM}/{RT}pc) \
		-o > < \
		(.8:{TAIL}={EM}/{LIB}a68s) \
		(.p:{TAIL}={EM}/{LIB}pc) \
		(.cp.8:{TAIL}={EM}/{LIB}cpc) \
		(.bas:{TAIL}={EM}/{LIB}bc) \
		(.ocm:{TAIL}={EM}/{LIB}ocm) \
		(.mod:{TAIL}={EM}/{LIB}m2) \
		(.f:{TAIL}={EM}/{LIB}f77 {EM}/{LIB}ac) \
		(.ocm.bas:{TAIL}={OLD_C_LIB}) \
		(.c:{TAIL}={C_LIB}) \
		{LIBDB?} \
		(.e:{TAIL}={EM}/{LIB}em {EM}/{LIB}mon -lc {EM}/lib/{M}/end_em)
	linker
	outfile a.out
end
